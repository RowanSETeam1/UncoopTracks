<?xml version="1.0" encoding="UTF-8"?>
<project name="module_uncooptracks" default="compile.module.uncooptracks">
  <dirname property="module.uncooptracks.basedir" file="${ant.file.module_uncooptracks}"/>
  
  <property name="module.jdk.home.uncooptracks" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.uncooptracks" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.uncooptracks" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.uncooptracks" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="uncooptracks.output.dir" value="${module.uncooptracks.basedir}/out/production/UncoopTracks"/>
  <property name="uncooptracks.testoutput.dir" value="${module.uncooptracks.basedir}/out/test/UncoopTracks"/>
  
  <path id="uncooptracks.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="uncooptracks.module.production.classpath">
    <path refid="${module.jdk.classpath.uncooptracks}"/>
    <path refid="library.commons-csv-1.2.classpath"/>
  </path>
  
  <path id="uncooptracks.runtime.production.module.classpath">
    <pathelement location="${uncooptracks.output.dir}"/>
    <path refid="library.commons-csv-1.2.classpath"/>
  </path>
  
  <path id="uncooptracks.module.classpath">
    <path refid="${module.jdk.classpath.uncooptracks}"/>
    <pathelement location="${uncooptracks.output.dir}"/>
    <path refid="library.commons-csv-1.2.classpath"/>
  </path>
  
  <path id="uncooptracks.runtime.module.classpath">
    <pathelement location="${uncooptracks.testoutput.dir}"/>
    <pathelement location="${uncooptracks.output.dir}"/>
    <path refid="library.commons-csv-1.2.classpath"/>
  </path>
  
  
  <patternset id="excluded.from.module.uncooptracks">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.uncooptracks">
    <patternset refid="excluded.from.module.uncooptracks"/>
  </patternset>
  
  <path id="uncooptracks.module.sourcepath">
    <dirset dir="${module.uncooptracks.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.uncooptracks" depends="compile.module.uncooptracks.production,compile.module.uncooptracks.tests" description="Compile module UncoopTracks"/>
  
  <target name="compile.module.uncooptracks.production" depends="register.custom.compilers" description="Compile module UncoopTracks; production classes">
    <mkdir dir="${uncooptracks.output.dir}"/>
    <javac2 destdir="${uncooptracks.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.uncooptracks}/javac">
      <compilerarg line="${compiler.args.uncooptracks}"/>
      <bootclasspath refid="uncooptracks.module.bootclasspath"/>
      <classpath refid="uncooptracks.module.production.classpath"/>
      <src refid="uncooptracks.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.uncooptracks"/>
    </javac2>
    
    <copy todir="${uncooptracks.output.dir}">
      <fileset dir="${module.uncooptracks.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.uncooptracks.tests" depends="register.custom.compilers,compile.module.uncooptracks.production" description="compile module UncoopTracks; test classes" unless="skip.tests"/>
  
  <target name="clean.module.uncooptracks" description="cleanup module">
    <delete dir="${uncooptracks.output.dir}"/>
    <delete dir="${uncooptracks.testoutput.dir}"/>
  </target>
</project>